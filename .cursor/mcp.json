{
  "name": "no-name-tarot",
  "version": "1.0.0",
  "description": "Configuration package for No Name Tarot project",
  "author": "",
  "dependencies": {},
  "configurations": {
    "development": {
      "environment": "development",
      "settings": {
        "debug": true,
        "logLevel": "debug"
      }
    },
    "production": {
      "environment": "production",
      "settings": {
        "debug": false,
        "logLevel": "error"
      }
    }
  },
  "scripts": {
    "start": "",
    "build": "mise exec -- tuist generate",
    "test": "xcodebuild test -scheme LunalitTests -destination 'platform=iOS Simulator,name=iPhone 15'"
  },
  "permissions": [],
  "resources": {},
  "mcpServers": {
    "XcodeBuildMCP": {
      "command": "mise",
      "args": [
        "x",
        "npm:xcodebuildmcp@1.4.0",
        "--",
        "xcodebuildmcp"
      ]
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    }
  }
} 